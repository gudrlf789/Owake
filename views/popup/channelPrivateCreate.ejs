<div class="modal fade" id="channelPrivateCreate" tabindex="-1" aria-labelledby="privateChannelModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="privateChannelModalLabel">
                    Create a Private Channel
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="channelCreate-div">

                    <div class="container admin-info-group">
                        <div class="row channel-info-group">
                            <div class="channelJoin-info channelName-wrapper">
                                <p class="w-100 channel-info-name">Channel Name</p>
                                <input class="w-100" id="private_channelName" type="text"
                                    placeholder="Enter a Channel Name" required>
                            </div>

                            <div class="channelJoin-info channelPassword-wrapper">
                                <p class="w-100 channel-info-password">Channel Password</p>
                                <input class="w-100" id="private_channelPassword" type="password"
                                    placeholder="Enter a Channel Password" required>
                            </div>
                        </div>

                        <div class="row channel-info-group">
                            <div class="channelJoin-info channelUserName-wrapper">
                                <p class="w-100 channel-info-username">Username</p>
                                <input class="w-100" id="private_adminId" type="text" placeholder="Enter the Username"
                                    required>
                            </div>

                            <div class="channelJoin-info channelUserPassword-wrapper">
                                <p class="w-100 channel-info-userPassword">Admin Password</p>
                                <input class="w-100" id="private_adminPassword" type="password"
                                    placeholder="Enter a User Password">
                            </div>
                        </div>
                    </div>

